<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
     <tr>
      <th>User</th>
     <tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     <tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td><%= link_to book.title,book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
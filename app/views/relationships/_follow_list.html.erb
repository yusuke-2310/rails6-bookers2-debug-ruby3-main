
<% if @users.exists? %>
 <% @users.each do |user| %>
  <table class='table'>
   <thead>
    <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <td><%= user.name %></td>
     <td>フォロー数: <%= user.followings.count %></td>
     <td>フォロワー数: <%= user.followers.count %></td>
    </tr>
   </tbody>
  </table>
  <% end %>
 <% else %>
  <p>ユーザーはいません</p>
 <% end %>